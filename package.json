{
  "name": "manoranjanpe-app",
  "version": "2.0.0",
  "description": "ManoranjanPe - Har movie, ek click door | Enhanced movie booking platform with beautiful UI and smooth animations",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "prod": "NODE_ENV=production node app.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "docker:build": "docker build -t manoranjanpe-app .",
    "docker:run": "docker run -p 3000:3000 manoranjanpe-app",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop manoranjanpe-app",
    "pm2:restart": "pm2 restart manoranjanpe-app",
    "pm2:logs": "pm2 logs manoranjanpe-app",
    "pm2:monitor": "pm2 monit"
  },
  "keywords": [
    "movie",
    "booking",
    "tickets",
    "cinema",
    "entertainment",
    "express",
    "nodejs",
    "javascript",
    "bollywood",
    "hollywood",
    "manoranjanpe"
  ],
  "author": {
    "name": "ManoranjanPe Team",
    "email": "dev@manoranjanpe.com",
    "url": "https://manoranjanpe.com"
  },
  "contributors": [
    "Piyush Dalvi <piyush@manoranjanpe.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/manoranjanpe/movie-booking-app.git"
  },
  "bugs": {
    "url": "https://github.com/manoranjanpe/movie-booking-app/issues"
  },
  "homepage": "https://manoranjanpe.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 2
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "files": [
    "app.js",
    "package.json",
    "ecosystem.config.js",
    "README.md",
    "public/",
    "routes/",
    "middleware/",
    "controllers/"
  ],
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}